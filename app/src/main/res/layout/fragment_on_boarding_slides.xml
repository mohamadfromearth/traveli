<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_skip"
            style="@style/GeneralButton.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paddingLargeXXXXX"
            android:layout_marginEnd="@dimen/paddingLarge"
            android:text="SKIP"
            android:textSize="@dimen/textLarge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_travely_logo"
            android:layout_width="119dp"
            android:layout_height="75dp"
            android:layout_marginStart="@dimen/paddingLarge"
            android:layout_marginTop="@dimen/paddingLargeXXXXX"
            android:src="@drawable/union_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/iv_city"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:layout_marginHorizontal="70dp"
            android:layout_marginTop="@dimen/paddingLargeXXXXX"
            android:src="@drawable/china"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_travely_logo" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paddingLargeXXXXX"
            android:textColor="@color/lightPinkText0"
            android:textSize="@dimen/textLargeXXX"
            app:layout_constraintStart_toStartOf="@id/iv_city"
            app:layout_constraintTop_toBottomOf="@+id/iv_city"
            tools:text="Expectacular" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paddingLarge"
            android:textColor="@color/lightPinkText0"
            android:textSize="@dimen/textLargeXXX"
            app:layout_constraintStart_toStartOf="@id/iv_city"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_1"
            tools:text="Experience"

            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_description"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paddingLargeXXX"
            android:textColor="@color/lightPinkText0"
            android:textSize="@dimen/textLarge"
            app:layout_constraintStart_toStartOf="@id/iv_city"
            app:layout_constraintTop_toBottomOf="@id/tv_title_2"

            />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_continue_to_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paddingLargeXXXXX"
            android:textColor="@color/darkBlueText0"
            android:textSize="@dimen/textLargeXX"
            app:layout_constraintStart_toStartOf="@id/iv_city"
            app:layout_constraintTop_toBottomOf="@id/tv_title_2"
            tools:text="Continue to app" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>


